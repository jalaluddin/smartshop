@model SmartShop.Web.Areas.Admin.Models.ProductCategoryModel
@{
    ViewBag.Title = "Add";
    
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Blank page
            <small>it all starts here</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Examples</a></li>
            <li class="active">Blank page</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">        
        <div class="box">
            <div class="box-body">
                <form action="/Admin/ProductCategory/Add" role="form" method="post">
                    @Html.AntiForgeryToken()
                    <!-- text input -->
                    <div class="form-group">
                        <label>Name</label>
                        <input name="Name" class="form-control" placeholder="Category Name" type="text">
                    </div>
                    <!-- select -->
                    <div class="form-group">
                        <label>Parent Category</label>
                        @Html.DropDownListFor(m => m.ParentCategoryId, new SelectList(Model.ParentCategories, "Id", "Name"), "", new { @class = "form-control" })                        
                    </div>
                    <!-- checkbox -->
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.IsActive)
                                Active?
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>            
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


