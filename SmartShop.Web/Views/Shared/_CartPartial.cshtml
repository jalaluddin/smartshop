@using SmartShop.Web.Models

<div class="cart box_1">
    <a href="/checkout">
        <h3>
            <div class="total">
                <i class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></i>
                @SessionHelper.ShoppingCart.TotalAmount (@SessionHelper.ShoppingCart.CartItems.Count items)
